<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rudolfmedia.danrudolf.omegacleaning.ContactFragment"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Request Cleaning"
        android:id="@+id/schedule_button"
        android:background="#ff008ebf"
        android:textColor="#ffffffff"
        android:layout_gravity="center_vertical"
        android:paddingLeft="15dip"
        android:paddingRight="15dip"
        android:layout_marginTop="95dp"
        android:layout_below="@+id/enterDate"
        android:layout_centerHorizontal="true"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:ems="10"
        android:id="@+id/enterDate"
        android:hint="Enter Date"
        android:layout_below="@+id/enterAddress"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:ems="10"
        android:id="@+id/enterAddress"
        android:hint="Enter Address"
        android:layout_marginTop="151dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>
